
<% provide(:title, 'Edit user') %>
<div class="page">
  <div class="content">
    <div class="usernav">
      <span class="userlink"><%= link_to "Users", users_path %></span>
      <span class="userlink"><%= link_to "Profile", current_user %></span>
      <span class="userlink"><%= link_to "Log out", logout_path, method: "delete" %></span>
      <span class="userlink"><%= link_to "Settings", edit_user_path(current_user) %></span>
    </div>
    <div class="indexlocale">
      <h1>Edit Profile</h1>
      <div>
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
  
          <div class="form"><%= f.label :user_name %>
          <%= f.text_field :user_name, class: 'form-control' %></div>
    
          <div class="form"><%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %></div>
      
          <div class="form"><%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %></div>
      
          <div class="form"><%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %></div>
      
          <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>