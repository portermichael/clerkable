<div class="head_room">
	<div class="product_content">
		<div class="product_header">
			<span class="centertext">
				<%= @product.product_name %>
			</span>
			<hr class="dept"/>
		</div>	
		<div class="embed-thumbnail-container">
			<%= embed_thumbnail(@product.youtube_thumbnail_id) %>
		</div>
		<div class="affiliate_box">
			<div class="price_box">
				<span class="basic"><span class="centertext">$<%= @product.msrp %></span></span>
				<span class="basic"><span class="centertext">$<%= @product.expected %></span></span>
				<span class="price"><span class="centertext">$<%= @product.first_price %></span></span>
				<span class="price"><span class="centertext">$<%= @product.second_price %></span></span>
				<span class="hideseller">
					<span class="price"><span class="centertext">$<%= @product.third_price %></span></span>
					<span class="price"><span class="centertext">$<%= @product.fourth_price %></span></span>
					<span class="price"><span class="centertext">$<%= @product.fifth_price %></span></span>
				</span>
			</div>
			<div class="source_box">
				<span class="basic"><span class="centertext">MSRP</span></span>
				<span class="basic"><span class="centertext">Expected</span></span>
				<span class="source"><span class="centertext"><%= link_to @product.first_seller, @product.first_link %></span></span>
				<span class="source"><span class="centertext"><%= link_to @product.second_seller, @product.second_link %></span></span>
				<span class="hideseller">
					<span class="source"><span class="centertext"><%= link_to @product.third_seller, @product.third_link %></span></span>
					<span class="source"><span class="centertext"><%= link_to @product.fourth_seller, @product.fourth_link %></span></span>
					<span class="source"><span class="centertext"><%= link_to @product.fifth_seller, @product.fifth_link %></span></span>
				</span>
			</div>
			<span class="hideglance">
				<span class="gap"></span>
				<span class="on"><%= @product.first_glance %></span>
				<span class="off"><%= @product.second_glance %></span>
				<span class="on"><%= @product.third_glance %></span>
				<span class="off"><%= @product.fourth_glance %></span>
				<span class="ontwo"><span class="centertext"><%= @product.fifth_glance %></span></span>
			</span>
			<span class="hidefeature">
				<span class="gap"></span>
				<span class="on"><%= @product.first_feature %></span>
				<span class="off"><%= @product.second_feature %></span>
				<span class="on"><%= @product.third_feature %></span>
				<span class="offtwo"><span class="centertext"><%= @product.fourth_feature %></span></span>
				<span class="ontwo"><span class="centertext"><%= @product.fifth_feature %></span></span>
			</span>
			<span class="hidespec">
				<span class="gap"></span>
				<span class="on"><%= @product.first_spec %></span>
				<span class="off"><%= @product.second_spec %></span>
				<span class="on"><%= @product.third_spec %></span>
				<span class="offtwo"><span class="centertext"><%= @product.fourth_spec %></span></span>
				<span class="ontwo"><span class="centertext"><%= @product.fifth_spec %></span></span>
			</span>
		</div>
	</div>
	<div class="product_room">
		<div class="scrollprod">
			<% @products.each do |product| %>
			<div class="product_content">			
				<span class="product_header">
					<span class="centertext">
						<%= link_to product.product_name, product %>
					</span>
					<hr class="dept"/>
				</span>
				<span class="embed-thumbnail-container">
					<%= embed_thumbnail(@department.youtube_id) %>
				</span>
				<span class="affiliate_box">
					<span class="price_box">
						<span class="basic"><span class="centertext">$<%= product.msrp %></span></span>
						<span class="basic"><span class="centertext">$<%= product.expected %></span></span>
						<span class="price"><span class="centertext">$<%= product.first_price %></span></span>
						<span class="price"><span class="centertext">$<%= product.second_price %></span></span>
						<span class="hideseller">
							<span class="price"><span class="centertext">$<%= product.third_price %></span></span>
							<span class="price"><span class="centertext">$<%= product.fourth_price %></span></span>
							<span class="price"><span class="centertext">$<%= product.fifth_price %></span></span>
						</span>
					</span>
					<span class="source_box">
						<span class="basic"><span class="centertext">MSRP</span></span>
						<span class="basic"><span class="centertext">Expected</span></span>
						<span class="source"><span class="centertext"><%= link_to product.first_seller, product.first_link %></span></span>
						<span class="source"><span class="centertext"><%= link_to product.second_seller, product.second_link %></span></span>
						<span class="hideseller">
							<span class="source"><span class="centertext"><%= link_to product.third_seller, product.third_link %></span></span>
							<span class="source"><span class="centertext"><%= link_to product.fourth_seller, product.fourth_link %></span></span>
							<span class="source"><span class="centertext"><%= link_to product.fifth_seller, product.fifth_link %></span></span>
						</span>
					</span>
					<span class="hideglance">
						<span class="gap"></span>
						<span class="on"><%= product.first_glance %></span>
						<span class="off"><%= product.second_glance %></span>
						<span class="on"><%= product.third_glance %></span>
						<span class="off"><%= product.fourth_glance %></span>
						<span class="ontwo"><span class="centertext"><%= product.fifth_glance %></span></span>
					</span>
					<span class="hidefeature">
						<span class="gap"></span>
						<span class="on"><%= product.first_feature %></span>
						<span class="off"><%= product.second_feature %></span>
						<span class="on"><%= product.third_feature %></span>
						<span class="offtwo"><span class="centertext"><%= product.fourth_feature %></span></span>
						<span class="ontwo"><span class="centertext"><%= product.fifth_feature %></span></span>
					</span>
					<span class="hidespec">
						<span class="gap"></span>
						<span class="on"><%= product.first_spec %></span>
						<span class="off"><%= product.second_spec %></span>
						<span class="on"><%= product.third_spec %></span>
						<span class="offtwo"><span class="centertext"><%= product.fourth_spec %></span></span>
						<span class="ontwo"><span class="centertext"><%= product.fifth_spec %></span></span>
					</span>
				</span>
			</div>
			<% end %>
		</div>
	</div>
	<div class="showstats">
		<button class="seller">More Sellers</button>
		<button class="glance">At a Glance</button>
		<button class="feature">Features</button>
		<button class="spec">Specs</button>
	</div>
</div>