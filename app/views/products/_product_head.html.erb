		
	<div class="row head_room">
		<div class="col-md-4 benefits_section">
			<% @product.benefits.split(', '). each do |split| %>
				<span class="benefits_items">
					<%= "\u2022" %>&nbsp;&nbsp;<%= split %>&nbsp;&nbsp;
				</span>
			<% end %>
		</div>
		
		<div class="col-md-8">
			<div class="col-md-4 text-center">
				<div class="product_content">
					<div class="product_header">
						<%= @product.product_name %>
					</div>	
					<div class="embed-thumbnail-container col-md-12 text-center">
						<%= embed_thumbnail(@product.youtube_thumbnail_id) %>
					</div>
				</div>
			</div>
			<div class="col-md-8 text-center">
				<div class="row">			
					<% @items.each do |product| %>
					<div class="col-md-6 text-center">
						<div class="product_content">
							<div class="product_header">
								<%= link_to product.product_name, product %>
							</div>
							<div class="embed-thumbnail-container col-md-12 text-center">
								<%= embed_thumbnail(product.youtube_thumbnail_id) %>
							</div>
						</div>
					</div>
					<% end %>
					
				</div>
			</div>
		</div>
	</div>