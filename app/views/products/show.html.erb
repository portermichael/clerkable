<% provide(:title, @product.product_name) %>

<body>
	<div class="page">
		<%= render "products/product_sidebar" %>
		<div class="content">
			<%= render "layouts/breadcrumbs" %>
			<h1 class="title">
				<%= @product.product_name %>
			</h1>
			<div class="embed-container">
				<%= embed(@product.youtube_id) %>
			</div>
			<%= render "products/product_head" %>
		</div>
		<%= render "products/product_topic" %>
	</div>
</body>