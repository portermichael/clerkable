

<body>
  <div class="content">
      <%= render "departments/index_sidebar" %>
    <div class="front">
      <h1>
        Clerkable
      </h1>
    </div>
    <div class="embed-container">
      <%= embed("Rd8n74XDQUY") %>
    </div>
    <div class="head_room">
      <% Department.roots.each do |department| %>    
